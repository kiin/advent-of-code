inp = open('day10.txt','r')
Lines = inp.readlines()
adp = [int(i) for i in Lines]
adp.sort()
print(adp[len(adp)-1]+3)

outlet = 0
count1 = 0
count3 = 0
for j in adp:
    print(outlet,j)
    if outlet+1 == j:
        outlet = j
        count1+=1
    if outlet+3 == j:
        outlet = j
        count3+=1

print(count1 * count3)
